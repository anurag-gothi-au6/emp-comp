<h1 style="text-align: center;"> {{name}}</h1>

{{#if working}}
{{else}}
<form action="/join/{{id}}" method="POST" style="text-align: right;">
<input type="text" name="role" placeholder="Job Profile">
<button type="submit" class="btn btn-success">Join Now</button>
</form>
{{/if}}
<br>
<br>
{{#if current}}
<h3>Current Employees</h3>
<table class="table">
  <thead class="thead-dark">
    <tr>
      <th scope="col">Name</th>
      <th scope="col">Role</th>
      <th scope="col">Joining Date</th>
    </tr>
  </thead>
  <tbody>
    {{#each current}}
    <tr>
      <td>{{this.name}}</td>
      <td>{{this.role}}</td>
      <td>{{this.joiningdate}}</td>
    </tr>
    {{/each}}
    <tr>
  </tbody>
</table>
{{else}}
<h4>No current Employee</h4>
{{/if}}
{{#if ex}}
<h3>Ex Employees</h3>
<table class="table">
  <thead class="thead-light">
    <tr>
      <th scope="col">Name</th>
      <th scope="col">Role</th>
      <th scope="col">Time Period</th>
    </tr>
  </thead>
  <tbody>
    {{#each ex}}
    <tr>
      <td>{{this.name}}</td>
      <td>{{this.role}}</td>
      <td>{{this.joiningdate}} --- {{this.resignationdate}}</td>
    </tr>
    {{/each}}
    <tr>

  </tbody>
</table>
{{else}}
<h4>No Ex Employee</h4>
{{/if}}
